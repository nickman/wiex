<?xml version="1.0" encoding="UTF-8"?>

	<mbean code="com.adp.sbs.metrics.tracing.collectors.CollectorService" name="com.adp.sbs.metrics:service=TomcatMonitor">
		<constructor>
			<arg type="java.lang.String" value="com.adp.sbs.metrics.tracing.collectors.tomcat.TomcatThreadStatusCollector"/>
		</constructor>
		<attribute name="TomcatHost">${bind.address}</attribute>
		<attribute name="HTTPPort">${jboss.web:service=WebServer.Port}</attribute>
		<attribute name="AJPPort">${jboss.web:service=WebServer.PortAJP}</attribute>
	</mbean>
